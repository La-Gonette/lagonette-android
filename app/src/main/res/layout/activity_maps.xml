<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activity.MapsActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dependency="@+id/bottom_sheet"
        app:layout_behavior="com.zxcv.gonette.app.widget.behavior.ParallaxBehavior"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/my_location_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_my_location_dark_grey_24dp"
        app:backgroundTint="@android:color/white"
        app:elevation="@dimen/fab_elevation_secondary"
        app:fabSize="normal"
        app:layout_anchor="@id/content"
        app:layout_anchorGravity="end|bottom"/>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="top"
        android:background="@drawable/bg_bottom_sheet"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top"/>

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:clipToPadding="true"
        android:elevation="4dp"
        app:behavior_peekHeight="192dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        tools:elevation="2dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bottom_sheet_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_filter_list_white_24dp"
        app:elevation="@dimen/fab_elevation_primary"
        app:fabSize="normal"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="end|top"/>


</android.support.design.widget.CoordinatorLayout>